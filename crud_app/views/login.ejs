<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="/css/mystyle.css" />
  </head>
  <body style="background-color: rgba(162, 196, 201, 255)">
    <h1>GAMER MANAGEMENT</h1>

    <% if (locals.errors) { %>
    <div class="errors">
      <% locals.errors.forEach(err => { %>
      <p><%= err %></p>
      <% }) %>
    </div>
    <% } %>

    <form action="/auth/login" method="post">
      <div class="container">
        <label><b>Email</b></label>
        <input
          type="email"
          placeholder="Email"
          name="email"
          required
          value="<%- locals.fields?.email %> "
        /><br />

        <label><b>Password</b></label>
        <input
          type="password"
          placeholder="Password"
          name="password"
          required
        /><br />

      </div>

      <div class="container">
        <button type="submit" class="submitbtn">Log In</button>
        <button class="submitbtn">
          <a href="/auth/register" style="text-decoration: none; color: black"
            >Sign up</a
          >
        </button>
        <span class="psw"><a href="#">forgot password?</a></span>
      </div>
    </form>
  </body>
</html>
